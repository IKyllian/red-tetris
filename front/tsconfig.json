{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "front/*": ["src/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "rootDir": "./"
  },
  "include": ["src"]
}